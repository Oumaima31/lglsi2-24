def calculate_puissance(base, exponent):
    """Calculates the power of a base number raised to an exponent."""
    result = base ** exponent
    return result

def main():
    """The main function of the program."""
    base = float(input("Enter the base number: "))
    exponent = int(input("Enter the exponent: "))
    result = calculate_puissance(base, exponent)
    print(f"The result of {base} raised to the power of {exponent} is: {result}")

if __name__ == "__main__":
    main()
